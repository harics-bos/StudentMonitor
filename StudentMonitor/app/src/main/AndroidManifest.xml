<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="exercise.intern.boa.studentmonitor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.StudentRegistrationActivity" />
        <activity
            android:name=".UI.ViewChildActivity"
            android:label="@string/title_activity_view_child"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.EditChildActivity"
            android:label="@string/title_activity_edit_child"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.EnterSurveyActivity"
            android:label="@string/title_activity_enter_survey"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".UI.ViewSurveylist"
            android:label="@string/title_activity_view_surveylist"
            android:theme="@style/AppTheme.NoActionBar"></activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
    </application>

</manifest>